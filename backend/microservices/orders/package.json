    "test": "jest"
  },
  "keywords": [
    "orders",
    "microservices",
    "order management"
  ],
  "author": "Breyner Lascarro A.",
  "license": "ISC",
  "description": "Microservicio de gestión de órdenes para el ecosistema de microservicios.",
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/socket.io": "^3.0.1",
    "jest": "^29.7.0",
    "prisma": "^6.6.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "amqplib": "^0.10.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.5.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2"
  }
