{
  "name": "kitchen",
  "version": "1.0.0",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "npm run prisma:generate && node dist/src/main.js",
    "start:dev": "concurrently -k -s first -n prisma,app \"npm run init\" \"ts-node-dev --respawn --transpile-only --poll src/main.ts\"",
    "init": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate deploy",
    "prisma:seed": "node dist/prisma/seed.js",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "prisma": {
    "seed": "npm run prisma:seed"
  },
  "keywords": [
    "kitchen",
    "microservices",
    "kitchen management"
  ],
  "author": "Breyner Lascarro A.",
  "license": "ISC",
  "description": "Microservicio de gesti√≥n de cocina para el ecosistema de microservicios.",
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/node": "^22.15.2",
    "concurrently": "^9.1.2",
    "prisma": "^6.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@prisma/extension-accelerate": "^1.3.0",
    "amqplib": "^0.10.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.5.0",
    "ts-node": "^10.9.2"
  }
}
